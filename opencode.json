{
  "$schema": "https://opencode.ai/config.json",

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "docker",
        "container",
        "run",
        "-i",
        "--rm",
        "--init",
        "--network",
        "host",
        "mcr.microsoft.com/playwright/mcp"
      ],
      "enabled": false
    }
  }
}
